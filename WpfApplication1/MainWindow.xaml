<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="525"
        xmlns:wpf="clr-namespace:WPFControl;assembly=WPFControl">
    <Grid>
        <wpf:AutoComplete Name="cmbEmployee" Width="200" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
                          SelectedValuePath="EmployeeIdx" FilterColumn="EmpId" DisplayMemberPath="EmpId" SelectionChanged="cmbEmployee_SelectionChanged"/>

        <wpf:AutoComplete Name="cmbEmployee1" Width="200" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,10,0,0"
                          SelectedValuePath="EmployeeIdx" FilterColumn="EmpId" DisplayMemberPath="EmpId" />

        <wpf:AutoComplete Name="cmbCompany" Width="200" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,50,0,0"
                          FilterColumn="CompanyId" DisplayMemberPath="CompanyId"/>
        
        <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="25,184,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
    </Grid>
</Window>
