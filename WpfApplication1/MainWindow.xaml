<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="525"
        xmlns:wpf="clr-namespace:WPFControl;assembly=WPFControl">
    
    <Window.Resources>
        <DataTemplate x:Key="CrewTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding CrewId}" />
                <TextBlock Text=" : " />
                <TextBlock Text="{Binding CrewName}" />
                <!--<TextBlock Text=", " />
                <TextBlock Text="{Binding LastName}" />-->
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <wpf:AutoCompleteComboBox Name="cmbEmployee" Width="200" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
                          SelectedValuePath="CrewId" FilterColumn="CrewId" ItemTemplate="{StaticResource CrewTemplate}" />

        <wpf:PopupHyperLink Name="hyperlink" Data="{Binding EmpName}"/>
        <!--<wpf:AutoComplete Name="cmbEmployee1" Width="200" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,10,0,0"
                          SelectedValuePath="EmpId" DisplayMemberPath="EmpId" />

        <wpf:AutoComplete Name="cmbCompany" Width="200" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,50,0,0"
                          DisplayMemberPath="CompanyId"/>-->
        
        <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="25,184,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
    </Grid>
</Window>
