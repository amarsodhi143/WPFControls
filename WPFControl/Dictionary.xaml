<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpf="clr-namespace:WPFControl">

    <Style TargetType="ToggleButton" x:Key="ComboToggleButton">
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Background="Transparent">
                        <Path Name="Arrow" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 8 0 L 4 4 Z" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type wpf:AutoComplete}">
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="true" />
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type wpf:AutoComplete}">
                    <Grid >
                        <TextBox Name="PART_EditableTextBox" />
                        <ToggleButton Name="PART_ToggleButton" Style="{StaticResource ComboToggleButton}" />
                        <Popup x:Name="PART_Popup" StaysOpen="False">
                            <ListBox Name="PART_ListBox" MaxHeight="250" />
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type wpf:PopupHyperLink}">
        <Setter Property="Height" Value="15"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type wpf:PopupHyperLink}">
                    <Grid>                        
                        <TextBlock>
                           <Hyperlink x:Name="PART_HyperLink"> Edit </Hyperlink>
                        </TextBlock>

                        <Popup x:Name="PART_Popup" StaysOpen="False" PopupAnimation="Slide" MinHeight="100" MinWidth="150" >
                            <Grid>
                                <TextBox x:Name="PART_TextBox" TextWrapping="Wrap" Height="50"/>
                                <Button x:Name="PART_SaveButton" Content="Save" Height="23" Width="50" />
                                <Button x:Name="PART_CloseButton" Content="Close" Height="23" Width="50" />
                            </Grid>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>